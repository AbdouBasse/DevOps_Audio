pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "devops-audio-monitoring"
        DOCKER_TAG = "latest"
        DOCKER_REGISTRY = "docker.io"
        DOCKER_CREDENTIALS = "dockerhub-credentials" // ID des credentials Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                // Récupération du code source
                checkout scm
            }
        }

        stage('Install dependencies') {
            steps {
                // Installation des dépendances Python
                sh '''
                pip install -r requirements.txt
                pip install pytest
                '''
            }
        }

        stage('Run tests') {
            steps {
                // Lancer les tests unitaires et de monitoring
                sh 'pytest tests/'
            }
        }

        stage('Build Docker images') {
            steps {
                // Construire l’image de l’API
                sh "docker build -t $DOCKER_IMAGE:$DOCKER_TAG -f docker/Dockerfile ."

                // Construire la stack avec docker-compose (API + Prometheus + Grafana)
                sh "docker-compose -f docker/docker-compose.yml build"
            }
        }

        stage('Push Docker image') {
            steps {
                // Pousser l’image vers DockerHub
                withCredentials([usernamePassword(credentialsId: DOCKER_CREDENTIALS, usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    sh """
                    echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin $DOCKER_REGISTRY
                    docker tag $DOCKER_IMAGE:$DOCKER_TAG $DOCKER_USER/$DOCKER_IMAGE:$DOCKER_TAG
                    docker push $DOCKER_USER/$DOCKER_IMAGE:$DOCKER_TAG
                    """
                }
            }
        }

        stage('Deploy (Future)') {
            steps {
                // Étape de déploiement futur sur AWS EC2/Lightsail
                echo "Déploiement de la stack Monitoring vers AWS à venir..."
            }
        }
    }

    post {
        success {
            echo "Pipeline Monitoring terminé avec succès ✅"
        }
        failure {
            echo "Pipeline Monitoring échoué ❌"
        }
    }
}
